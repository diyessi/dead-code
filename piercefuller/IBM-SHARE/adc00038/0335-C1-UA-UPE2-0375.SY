       REM UNIVARIATE POLYNOMIAL EVALUATION, VARIABLE SECTION+DEGREE  UAUPE20000
 UPE   SXD COMMON,2           SAVE INDEX 2                              UPE20001
       STO COMMON+1           SAVE X (ARGUEMENT)                        UPE20002
       CLA 1,4                L(N)-1 FOR F1ST SECTION                   UPE20003
       STO COMMON+2                                                     UPE20004
       COM                    ADDRESS 6                                 UPE20005
       PAX 5,2                TWOS COMPLEMENT OF L(N) FOR 1ST SECTION   UPE20006
       CLA -1,2               MINIMUM VALUE OF X                        UPE20007
       LDQ COMMON+1             X                                       UPE20008
       TLQ UPE+24               X LESS THAN MINIMUM                     UPE20009
       CLA 1,2                MAXIMUM FOR SECTION                       UPE20010
       SUB COMMON+1             X                                       UPE20011
       TPL UPE+25               TRA IF X IN THIS SECTION                UPE20012
       CLA 0,2                  (N) DEGREE FOR SECTION                  UPE20013
       TZE UPE+22               X OUT OF RANGE (TOO LARGE)              UPE20014
       LDQ COMMON+2             SAVE PREVIOUS L(N)-1                    UPE20015
       SXD UPE+21,2             SAVE FOR EXTRAPOLATION IF X TOO LARGE   UPE20016
       ADD UPE+5              5                                         UPE20017
       ADD COMMON+2           PEVIOUS L(N)-1                            UPE20018
       STA COMMON+2           NEW L(N)-1 FOR SECTION                    UPE20019
       COM                                                              UPE20020
       PAX 0,2                TWOS COMPLEMENT OF L(N) NEXT SECTION      UPE20021
       TXI UPE+9                TO TEST NEXT SECTION                    UPE20022
       STQ COMMON+2             X GREATER THAN MAXIMUM                  UPE20023
       LXD UPE+21,2             RESTORE X2 FOR PREVIOUS SECTION         UPE20024
       TXI UPE+25,4,1           SET FOR OUT-OF-RANGE EXIT               UPE20025
       LDQ 2,2                ALPHA                                     UPE20026
       FMP COMMON+1           X                                         UPE20027
       FAD 3,2                BETA                                      UPE20028
       STO COMMON+1           NORMALIZED X                              UPE20029
       LDQ 4,2                A SUB N                                   UPE20030
       CLA 0,2                N                                         UPE20031
       PAX 0,2                DEGREE IN INDEX 2                         UPE20032
       ADD COMMON+2           L(N)-1                                    UPE20033
       ADD UPE+4              6                                         UPE20034
       STA UPE+36               L(CONSTANT TERM) + 1                    UPE20035
       FMP COMMON+1           A SUB N * NORMALIZED X                    UPE20036
       FAD *,2                A SUB(N-1)... A SUB 0                     UPE20037
       STO COMMON+2                                                     UPE20038
       LDQ COMMON+2                                                     UPE20039
       TIX UPE+35,2,1           PICK UP NEXT COEFFICIENT                UPE20040
       LXD COMMON,2           RESTORE INDEX 2                           UPE20041
       TRA 3,4                EXIT                                      UPE20042
