      SUBROUTINE DETN(A,B,ALPHA,DETN,N)                                 DETN0001
      DIMENSION A(50,50),B(50)                                          DETN0002
      DETN=1.                                                           DETN0003
      DO 172J=1,N                                                       DETN0004
 172  B(J)=A(1,J)                                                       DETN0005
      B(1)=B(1)-ALPHA                                                   DETN0006
      DO 177I=2,N                                                       DETN0007
      J=I+1                                                             DETN0008
      IF(ABSF(B(I-1))-ABSF(A(I,I-1)))175,169,169                        DETN0009
 169  IF (B(I-1))173,179,173                                            DETN0010
 173  R=A(I,I-1)/B(I-1)                                                 DETN0011
      B(I)= A(I,I)-ALPHA - R*B(I)                                       DETN0012
      DO 174K=J,N                                                       DETN0013
 174  B(K)=A(I,K)- R*B(K)                                               DETN0014
      GO TO 177                                                         DETN0015
 175  R=B(I-1)/A(I,I-1)                                                 DETN0016
      B(I-1)=A(I,I-1)                                                   DETN0017
      B(I)=B(I)- R*(A(I,I)-ALPHA)                                       DETN0018
      DO 176K=J,N                                                       DETN0019
 176  B(K)=B(K)- R*A(I,K)                                               DETN0020
      DETN=-DETN                                                        DETN0021
 177  CONTINUE                                                          DETN0022
      DO 178I=1,N                                                       DETN0023
 178  DETN=DETN*B(I)                                                    DETN0024
 171  RETURN                                                            DETN0025
 179  DETN=0.                                                           DETN0026
      GO TO 171                                                         DETN0027
      END (2,2,2,2,2)                                                   DETN0028
